<div class="container">
  <div class="row">
    <article>
      <a href="/dashboard"> &larr; Back to dashboard</a>
      <h2>
        Edit Post
      </h2>
  </div>
  <div class="row">
    <div class="col-6 card">
      <form class="edit-post-form">
        <div>
          <h3>{{ post.title }}</h3>
          <input class="form-control" name="post-text" type="text" value="{{post.post_text}}" />
        </div>
        <div>
          {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
          |
          <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
    </div>
    <div class="col-5 card">
      <button class="btn btn-success" type="submit">Save post</button>
      <button type="button" class="delete-post-btn btn btn-danger">Delete post</button>
      </form>
    </div>
    </article>
  </div>
  <div class="row">
    <div class="col-6 card">
      <form class="comment-form container">
        <div>
          <textarea class="form-control" name="comment-body"></textarea>
        </div>
    </div>
    <div class="col-5 card">
      <div>
        <button class="btn btn-success" type="submit">Add Comment</button>
      </div>
      </form>
    </div>
  </div>
  {{> comments post.comments}}

</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>